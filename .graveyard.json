{
  "active": true,
  "project": "trip-protocol",
  "github_notify": ["@troopdegen"],
  "rules": {
    "contracts": {
      "auto_merge": true,
      "require_tests": true,
      "tdd": true
    },
    "backend": {
      "auto_merge": true,
      "require_tests": true
    },
    "config": {
      "auto_merge": true
    },
    "web": {
      "auto_merge": false,
      "require_review": true,
      "reviewer": "@troopdegen"
    },
    "skill": {
      "auto_merge": false,
      "require_review": true,
      "reviewer": "@troopdegen"
    }
  },
  "guardrails": {
    "max_concurrent_subagents": 2,
    "stall_threshold_hours": 2,
    "pause_on_failure": true
  }
}
